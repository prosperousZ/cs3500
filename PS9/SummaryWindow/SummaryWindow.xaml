<Window x:Class="Summary.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Summary" Height="500" Width="500" ResizeMode="CanResizeWithGrip">

        <Viewbox Stretch="Fill">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

                <TextBox x:Name="Summary" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FFE9F5D7"/>
            </ScrollViewer>
        </Viewbox>

</Window>
